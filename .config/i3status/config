general {
        colors = true
        interval = 5
}

order += "battery all"
order += "disk /"
order += "memory"
order += "tztime local"

battery all {
        format = "%status %percentage"
}

disk "/" {
        format = "%avail"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%d/%m/%y %H:%M"
}
